# Application Configuration
APP_NAME=HR Management System
ENVIRONMENT=development
DEBUG=True
API_VERSION=v1
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://postgres:hrms_secure_password_123@localhost:5432/hr_system
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=False

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=True
CACHE_TTL=3600

# Security
SECRET_KEY=your-secret-key-change-this-in-production-123456789
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-123456789
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://143.110.227.18:3000", "http://143.110.227.18"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@hrmanagement.com
SMTP_FROM_NAME=HR Management System
EMAIL_ENABLED=False

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=[".pdf", ".doc", ".docx", ".jpg", ".jpeg", ".png"]

# WebSocket
WS_ENABLED=True
WS_PATH=/ws

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Multi-tenant
ENABLE_MULTI_TENANT=True

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
