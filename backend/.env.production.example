# Production Environment Configuration

NODE_ENV=production
PORT=5000

# Database Configuration
DB_HOST=your-production-db-host.db.ondigitalocean.com
DB_PORT=25060
DB_NAME=hr_system_production
DB_USER=doadmin
DB_PASSWORD=CHANGE_ME_PRODUCTION_DB_PASSWORD

# Redis Configuration
REDIS_HOST=your-production-redis-host.db.ondigitalocean.com
REDIS_PORT=25061
REDIS_PASSWORD=CHANGE_ME_PRODUCTION_REDIS_PASSWORD

# JWT Configuration
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_MIN_32_CHARS_STRONG
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SendGrid recommended for production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=CHANGE_ME_SENDGRID_API_KEY
EMAIL_FROM=noreply@your-domain.com

# Frontend URL
FRONTEND_URL=https://your-domain.com
API_URL=https://api.your-domain.com

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn
LOG_FILE_PATH=./logs

# Session
SESSION_SECRET=CHANGE_ME_PRODUCTION_SESSION_SECRET_STRONG

# CORS
CORS_ORIGIN=https://your-domain.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# RabbitMQ (if using message queue)
RABBITMQ_URL=amqp://admin:CHANGE_ME@your-rabbitmq-host:5672

# Timezone
TZ=UTC

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
