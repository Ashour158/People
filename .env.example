# Environment variables for docker-compose
NODE_ENV=production
DB_PASSWORD=postgres
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h
API_BASE_URL=http://localhost:5000/api/v1

# Email configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# AI/ML Configuration
AI_ENABLED=false
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# AI Feature Flags
AI_RESUME_PARSING_ENABLED=false
AI_CANDIDATE_MATCHING_ENABLED=false
AI_ATTRITION_PREDICTION_ENABLED=false
AI_PERFORMANCE_PREDICTION_ENABLED=false
AI_SENTIMENT_ANALYSIS_ENABLED=false
AI_CHATBOT_ENABLED=false
AI_SKILLS_ANALYSIS_ENABLED=false

# AI Rate Limits
AI_RATE_LIMIT_PER_HOUR=100
AI_RATE_LIMIT_PER_DAY=1000

# AI Cache Settings
AI_CACHE_ENABLED=true
AI_CACHE_TTL=86400

# AI Privacy Settings
AI_ANONYMIZE_DATA=true
AI_LOG_PREDICTIONS=true
AI_REQUIRE_CONSENT=true
