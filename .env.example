# =====================================================
# ENVIRONMENT CONFIGURATION
# =====================================================
# SECURITY WARNING: Never commit this file with real values!
# Copy this file to .env and update with your actual values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hr_system
DB_USER=postgres
DB_PASSWORD=change_this_secure_password_in_production
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_secure_redis_password

# JWT Configuration
# CRITICAL: Generate a strong random secret (minimum 32 characters)
# Use: openssl rand -base64 64 | tr -d '\n'
JWT_SECRET=REPLACE_WITH_STRONG_RANDOM_SECRET_MIN_32_CHARS_USE_OPENSSL_RAND_BASE64_64
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@yourcompany.com

# MENA Configuration
DEFAULT_CURRENCY=USD
MENA_COUNTRY_CODES=AE,SA,KW,QA,OM,BH,JO,EG,MA,TN,LB,IQ,YE,SY

# Multi-Tenancy
ENABLE_RLS=false

# API Base URL (for frontend)
API_BASE_URL=http://localhost:5000/api/v1
